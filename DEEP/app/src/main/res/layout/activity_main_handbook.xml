<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1d1b20"
    android:theme="@style/Theme.DEEP"
    tools:context=".handbook.MainActivityHandbook">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/findeditText" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/backgroundText"
        android:layout_width="0dp"
        android:layout_height="50dp"

        android:layout_margin="10dp"
        android:backgroundTint="#242228"
        android:clickable="false"
        android:fontFamily="@font/amethysta"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:strokeWidth="1dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/findeditText"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="@string/hint_fiend"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/light_white_text"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundText"
        app:layout_constraintEnd_toEndOf="@+id/backgroundText"
        app:layout_constraintStart_toStartOf="@+id/backgroundText"
        app:layout_constraintTop_toTopOf="@+id/backgroundText"
        tools:ignore="Autofill,TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>