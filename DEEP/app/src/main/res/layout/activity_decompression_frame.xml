<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D1B20"
    tools:context=".diver.DecompressionFrameActivity"
    tools:ignore="HardcodedText,ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" >

    <com.google.android.material.button.MaterialButton
        android:id="@+id/backgroundText"
        android:layout_width="0dp"
        android:layout_height="50dp"

        android:layout_margin="10dp"
        android:backgroundTint="#242228"
        android:clickable="false"
        android:fontFamily="@font/amethysta"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:strokeWidth="1dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/amethysta"
        android:gravity="center_horizontal|center_vertical"
        android:text="Расчёт декомпрессии"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundText"
        app:layout_constraintEnd_toEndOf="@+id/backgroundText"
        app:layout_constraintStart_toStartOf="@+id/backgroundText"
        app:layout_constraintTop_toTopOf="@+id/backgroundText"
        tools:ignore="TextSizeCheck" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/backgroundBTN"
        android:layout_width="0dp"
        android:layout_height="180dp"

        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#242228"
        android:clickable="false"
        android:fontFamily="@font/amethysta"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:strokeWidth="1dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/oxygent_background"
        android:layout_width="0dp"
        android:layout_height="60dp"

        android:text="///"

        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#242228"
        android:clickable="false"
        android:fontFamily="@font/amethysta"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backgroundBTN"
        app:strokeWidth="1dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/backgroundBTN5"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"

        android:layout_marginBottom="10dp"
        android:backgroundTint="#242228"
        android:clickable="false"
        android:fontFamily="@font/amethysta"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oxygent_background"
        app:layout_constraintVertical_bias="1.0"
        app:strokeWidth="1dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/backgroundBTN6"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:strokeWidth="1dp"

        android:backgroundTint="#1D1B20"
        android:clickable="false"
        android:fontFamily="@font/amethysta"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundBTN5"
        app:layout_constraintEnd_toEndOf="@+id/backgroundBTN5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/backgroundBTN5"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/courier_prime"
        android:text="Выдержка на остановках, выполняется следующим образом. Если вы используете кислород, то временем на остановках будет значение в скобках, иначе игнорируйте значение в скобках"
        android:textAlignment="viewStart"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundBTN6"
        app:layout_constraintEnd_toEndOf="@+id/backgroundBTN6"
        app:layout_constraintStart_toStartOf="@+id/backgroundBTN6"
        app:layout_constraintTop_toTopOf="@+id/backgroundBTN6" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="40dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/depth_picker"
        app:layout_constraintEnd_toStartOf="@+id/depth_picker"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/backgroundBTN"
        app:layout_constraintTop_toTopOf="@+id/depth_picker"
        app:srcCompat="@drawable/pool" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/time_picker"
        app:layout_constraintEnd_toStartOf="@+id/time_picker"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/backgroundBTN"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/hourglass" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/depth_picker"
        android:textSize="16sp"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/amethysta"
        android:inputType="number"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:hint="Введите глубину погружения от 5 до 60м"
        android:textColorHint="@color/light_white_text"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundBTN"
        app:layout_constraintEnd_toEndOf="@+id/backgroundBTN"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backgroundBTN"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/time_picker"
        android:layout_width="0dp"

        android:layout_height="60dp"

        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:fontFamily="@font/amethysta"
        android:inputType="number"

        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:hint="Введите время работ\nпод водой в минутах"
        android:textSize="16sp"
        android:textColorHint="@color/light_white_text"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundBTN"
        app:layout_constraintEnd_toEndOf="@+id/depth_picker"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/depth_picker"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/getresult_btn"
        android:layout_width="100dp"
        app:strokeWidth="1dp"

        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#170091EA"
        android:text="Расчёт"
        android:textColor="@color/white"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/time_picker"
        app:layout_constraintEnd_toEndOf="@+id/depth_picker"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/time_picker"
        app:layout_constraintTop_toBottomOf="@+id/depth_picker" />

    <ScrollView
        android:id="@+id/scrollView3"
        style="@android:style/Widget.Material.ScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="80dp"
        android:background="#008E1D1D"
        android:backgroundTint="#00000000"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundBTN5"
        app:layout_constraintEnd_toEndOf="@+id/backgroundBTN5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/backgroundBTN5"
        app:layout_constraintTop_toTopOf="@+id/backgroundBTN5"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/decomp_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/amethysta"
            android:textAlignment="center" />
    </ScrollView>

    <!--<ImageView
        android:id="@+id/imageView2"
        android:layout_width="250dp"
        android:layout_height="167dp"
        app:layout_constraintBottom_toTopOf="@+id/back_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/decomp_result"
        app:layout_constraintVertical_bias="0.9"
        app:srcCompat="@drawable/secret" />-->

</androidx.constraintlayout.widget.ConstraintLayout>