<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Базовая тема приложения -->
    <style name="Base.Theme.DEEP" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Цвет строки состояния (верхней панели) -->
        <item name="android:statusBarColor">@color/my_dark_purple</item>
        <!-- Цвет навигационной панели (нижней панели) -->
        <item name="android:navigationBarColor">@color/my_dark_purple</item>

        <!-- Цвет некоторых виджетов -->
        <item name="colorPrimary">@color/my_dark_purple</item>
        <!-- Цвет текста/иконок на основной поверхности -->
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Другие атрибуты, как и раньше -->
        <item name="colorButtonNormal">#808080</item>
        <item name="android:buttonTint">#FFFFFF</item>
        <!-- Цвет основного фона -->
        <item name="android:windowBackground">#000000</item>
        <item name="android:textColor">#FFFFFF</item>

    </style>

    <style name="Theme.DEEP" parent="Base.Theme.DEEP" />

    <!-- Определение ресурса цвета -->
    <color name="my_dark_purple">#1d1b20</color>
</resources>